int lm35_pin = A0, leitura_lm35 = 0;
float temperatura;
float temperatura_modificada;


void setup(){
  Serial.begin(9600);
}

void loop(){
  leitura_lm35 = analogRead(lm35_pin);
  temperatura = leitura_lm35 * (5.0/1023) * 100;
  temperatura_modificada = temperatura * 0.63 - 15.83;
  Serial.print(temperatura_modificada);
  Serial.println(";");
  delay(2000);
}
